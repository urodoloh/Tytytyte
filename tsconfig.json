{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es6",
      "jsx": "react",
      "allowJs": true,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks": false,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true
    },
    "include": [
      "src",
      "src/**/*.ts"
    ]
  }


